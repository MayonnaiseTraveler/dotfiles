* {
    /**** Solarized colors ****
    * NOTE: I am including all of them even though I am using a sub-set. I keep
    * tweaking my theme and having access to all of the colors here is handy. */
    

    primary: #f9188f;
    secondary: #96155b;
    bg: #180d25;
    bg-alt: #33173F;
    
    transparent: rgba(0,0,0,0);
    /* Solarized Darker Theme */
    foreground:                  @primary;
    background:                  @background;

    normal-foreground:           @primary;
    normal-background:           @bg;
    active-foreground:           @primary;
    active-background:           @secondary;
    urgent-foreground:           @primary;
    urgent-background:           @bg;

    selected-normal-foreground:  @bg;
    selected-normal-background:  @bg-alt;
    selected-active-foreground:  @bg;
    selected-active-background:  @secondary;
    selected-urgent-foreground:  @bg;
    selected-urgent-background:  @secondary;

    alternate-normal-foreground: @bg;
    alternate-normal-background: @bg;
    alternate-active-foreground: @bg;
    alternate-active-background: @bg;
    alternate-urgent-foreground: @secondary;
    alternate-urgent-background: @bg;
    
    active-foreground:           @bg;
    active-background:           @secondary;

    separatorcolor:              @secondary;

    /* Main element styles */
    border-color:                @secondary;
    spacing:                     3;
    background-color:            @transparent;
}

*{
    text-color: @primary;
}

window {
    text-color:       @normal-foreground;
    background-color: @bg;
    border:           0;
    padding:          20;
}
mainbox {
    text-color: @normal-foreground;
    border:  0;
    padding: 0;
}
message {
    border:       1px dash 0px 0px ;
    border-color: @separatorcolor;
    padding:      1px ;
}
textbox {
    text-color: @secondary;
}
listview {
    text-color:   @normal-foreground;
    fixed-height: 0;
    border:       1px solid 0px 0px ;
    border-color: @secondary;
    spacing:      2px ;
    scrollbar:    false;
    padding:      8px 0px 0px 0px;
}
element {
    text-color:   @normal-foreground;
    border:  0;
    border-radius:10px;
    padding: 1px 0px 1px 8px;
}
element normal.normal {
    background-color: @normal-background;
    text-color:       @normal-foreground;
}
element normal.urgent {
    background-color: @urgent-background;
    text-color:       @urgent-foreground;
}
element normal.active {
    background-color: @active-background;
    text-color:       @active-foreground;
}
element selected.normal {
    background-color: @selected-normal-background;
    text-color:       @selected-normal-foreground;
}
element selected.urgent {
    background-color: @selected-urgent-background;
    text-color:       @selected-urgent-foreground;
}
element selected.active {
    background-color: @selected-active-background;
    text-color:       @selected-active-foreground;
}
element alternate.normal {
    background-color: @alternate-normal-background;
    text-color:       @alternate-normal-foreground;
}
element alternate.urgent {
    background-color: @alternate-urgent-background;
    text-color:       @alternate-urgent-foreground;
}
element alternate.active {
    background-color: @alternate-active-background;
    text-color:       @alternate-active-foreground;
}
scrollbar {
    width:        4px ;
    border:       0;
    handle-width: 8px ;
    padding:      0;
}
mode-switcher {
    border:       2px dash 0px 0px ;
    border-color: @separatorcolor;
}
button selected {
    background-color: @secondary;
    text-color:       @selected-normal-foreground;
}
inputbar {
    spacing:    0;
    ext-color: @normal-foreground;
    padding:    1px ;
}
case-indicator {
    spacing:    0;
    text-color: @normal-foreground;
}
entry {
    spacing:    0;
    text-color: @normal-foreground;
}
prompt {
    spacing:    0;
    text-color: @normal-foreground;
}
