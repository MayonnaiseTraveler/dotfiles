#custom-weather.icon{{
	font-family: Blobmoji;
	padding-bottom:0;
	margin-bottom:0;
}}

#custom-weather.temp{{
	padding-top:0;
	font-weight:700;
	margin-top:0;
}}

#cava{{
	color:{color9};
	font-size:calc({f_small}px * 1.2);
}}

#clock {{
	/* background-color:{color9}; */
	font-weight:700;
	margin:0 {gaps_in}px;
	padding:{gaps_in}px 0;
	border-radius:{b_radius2}px;
    color: {color15};
}}


#battery.charging, #battery.plugged {{
    color: #ffffff;
}}

@keyframes blink {{
    to {{
        background-color: #ffffff;
        color: #000000;
    }}
}}

#battery.critical:not(.charging) {{
    color: #ffffff;
    animation-name: blink;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    animation-direction: alternate;
}}

