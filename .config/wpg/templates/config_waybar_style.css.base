tooltip, menu, #tray menu {{
	background:rgba({color0.rgb},{opacity});
	border: {b_size}px solid rgb({color1.rgb});
	border-radius:{b_radius}px;
	}}

tooltip > box, menu, #tray menu{{
		padding:12px;
		border-style: solid;
		border-radius:4px;
	}}


tooltip * , label *, menu *, #tray menu * {{
		margin:0 2px;
		border-style: solid;
		padding:2px;
		border-radius:4px;
		font-size:calc({f_small}px * 1.4);
	}}

